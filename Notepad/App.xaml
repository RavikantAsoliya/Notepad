<Application x:Class="Notepad.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Notepad"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Merged resource dictionaries to define the application's styling -->
            <ResourceDictionary.MergedDictionaries>
                <!-- Including a XAML resource file for styling (DayMode.xaml) -->
                <ResourceDictionary Source="Themes/DayMode.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Themes/NightMode.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
